extends ../../layout/default.pug
include ../../mixins/alert.pug


block main
    if(role.permissions.includes("accounts_create")) 

        h1(class="mb-4") Thêm tài khoản mới

        +alert-error()

        form(
            action=`${prefixAdmin}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ và tên
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                )
            div(class="form-group")
                label(for="email") Email
                input(
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    required
                )
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=""
                    class="image-preview"
                    upload-image-preview
                )
            div(class="form-group")
                label(for="role_id") Danh mục cha
                select(
                    class="form-control"
                    id="role_id"
                    name="role_id"
                )
                    each role in roles
                        option(value=role.id) #{role.title} 
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới
    else 
        h2 Bạn không có quyền truy cập vào trang này

    


